- title "Servers"

%table
  %tr
    %th Name
  - for server in @servers
    %tr
      %td= server.name
      %td= link_to 'Show', server
      %td= link_to 'Edit', edit_server_path(server)
      %td= link_to 'Destroy', server, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Server", new_server_path
